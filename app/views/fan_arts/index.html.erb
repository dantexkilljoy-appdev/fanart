<div>
  <div>
    <h1>
      List of all fan arts
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new fan art
    </h2>

    <form action="/insert_fan_art" method="post">
      <div>
        <label for="topic_box">
          Topic
        </label>

        <input type="text" id="topic_box" name="query_topic">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="photos_count_box">
          Photos count
        </label>

        <input type="text" id="photos_count_box" name="query_photos_count">
      </div>

      <button>
        Create fan art
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Topic
        </th>

        <th>
          User
        </th>

        <th>
          Photos count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_fan_arts.each do |a_fan_art| %>
      <tr>
        <td>
          <%= a_fan_art.id %>
        </td>

        <td>
          <%= a_fan_art.topic %>
        </td>

        <td>
          <%= a_fan_art.user_id %>
        </td>

        <td>
          <%= a_fan_art.photos_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_fan_art.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_fan_art.updated_at) %> ago
        </td>

        <td>
          <a href="/fan_arts/<%= a_fan_art.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
