<div>
  <div>
    <h1>
      Fan art #<%= @the_fan_art.id %> details
    </h1>

    <div>
      <div>
        <a href="/fan_arts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_fan_art/<%= @the_fan_art.id %>">
          Delete fan art
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Topic
      </dt>
      <dd>
        <%= @the_fan_art.topic %>
      </dd>
     </dl>
  </div>
</div>

<hr>

<dl>
<% Message.where({ :fan_art_id => @the_fan_art.id }).order(:created_at).each do |message| %>
    <dt><%= message.role %></dt>
    <dd><%= simple_format(message.content) %></dd>
  <% end %>
</dl>


<hr>
